<!-- ================= BANNER SECTION ================= -->
<div class="banner-section">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-button">
      {{ section.settings.button_text }}
    </a>
  </div>

  {% if section.settings.banner_image %}
    <div class="banner-image">
      <img src="{{ section.settings.banner_image | img_url: '1200x' }}" alt="Banner Image">
    </div>
  {% else %}
    <div class="banner-image">
      <img src="https://via.placeholder.com/1200x500?text=Banner+Image" alt="Placeholder">
    </div>
  {% endif %}
</div>

<style>
/* Banner Styles */
.banner-section { display:flex; align-items:center; justify-content:space-between; padding:50px; background:#f8f8f8; }
.banner-content h1 { font-size:36px; font-weight:bold; margin-bottom:15px; }
.banner-content p { font-size:18px; margin-bottom:20px; }
.banner-button { display:inline-block; padding:15px 30px; background:#000; color:#fff; text-decoration:none; border-radius:5px; transition:.3s; }
.banner-button:hover { background:#333; transform:scale(1.05); }
.banner-image img { max-width:500px; width:100%; height:auto; }

@media(max-width:768px){
  .banner-section{ flex-direction:column; text-align:center; padding:30px 20px; }
  .banner-content h1{ font-size:28px; }
  .banner-content p{ font-size:16px; }
  .banner-image img{ max-width:100%; margin-top:20px; }
}
</style>

{% schema %}
{
  "name": "Banner",
  "settings": [
    { "type":"text","id":"heading","label":"Heading","default":"The Gift Guide" },
    { "type":"text","id":"subheading","label":"Subheading","default":"Discover the perfect gift for your loved ones" },
    { "type":"url","id":"button_link","label":"Button Link","default":"/collections/all" },
    { "type":"text","id":"button_text","label":"Button Text","default":"Shop Now" },
    { "type":"image_picker","id":"banner_image","label":"Banner Image" }
  ]
}
{% endschema %}

