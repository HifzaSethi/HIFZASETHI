<!-- Image will be uploaded by merchant in Shopify admin -->

<div class="banner-section">

  <div class="banner-top">
    <span class="logo-text">{{ section.settings.logo_text }}</span>
    <span class="center-text">{{ section.settings.center_text }}</span>
    <a href="{{ section.settings.cta_link }}" class="choose-btn">
      {{ section.settings.cta_text }}
    </a>
  </div>

  <div class="banner-image">
    {% if section.settings.banner_image != blank %}
      <img src="{{ section.settings.banner_image | image_url: width: 1600 }}">
    {% endif %}
  </div>

  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-button">
      {{ section.settings.button_text }}
    </a>
  </div>

</div>

<style>
.banner-secti on { 
  padding:40px; 
}

.banner-top {
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:20px;
}

/* IMAGE AREA  */
.banner-image {
  height:400px;
  position:relative;
  overflow:hidden;
}

.banner-image img {
  width:100%;
  height:100%;
  object-fit:cover;
}

/*  OVERLAY CONTENT */
.banner-content {
  position:absolute;
  bottom:30px;
  left:30px;
  color:#fff;
  max-width:400px;
}

.banner-content h1 {
  font-size:42px;
  margin-bottom:10px;
}

.banner-content p {
  font-size:16px;
  margin-bottom:20px;
}

.banner-button {
  display:inline-block;
  padding:14px 28px;
  background:#000;
  color:#fff;
  text-decoration:none;
  transition:0.3s;
}

.banner-button:hover {
  transform:scale(1.05);
}

/*  TOP BAR  */
.logo-text {
  font-weight:700;
  border:2px solid #000;
  padding:6px 10px;
}

.center-text {
  font-size:14px;
  text-transform:uppercase;
}

.choose-btn {
  background:#f7d046;
  padding:10px 18px;
  text-decoration:none;
  color:#000;
  font-weight:600;
  transition:0.3s;
}

.choose-btn:hover {
  transform:translateX(5px);
}

/*  MOBILE  */

@media (max-width: 768px) {

  .banner-image {
    height: 300px;
  }

  /* Move banner-content a bit lower */
  .banner-content {
    top: auto;
    left: 50%;
    bottom: 20px; /* instead of 50% center */
    transform: translateX(-50%);
    text-align: center;
    max-width: 90%;
  }

  .banner-content h1 {
    font-size: 28px;
  }

  .banner-content p {
    font-size: 14px;
  }

  /* Shrink top bar buttons */
  .banner-top {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px; /* spacing between logo, center text, and button */
  }

  .logo-text, .choose-btn {
    font-size: 14px; /* smaller font */
    padding: 4px 8px; /* shrink buttons */
    border-width: 1px; /* thinner border for logo */
  }

  .center-text {
    font size:12px;
  }

  .choose-btn {
    background:#f7d046;
    font weight:500;
  }
}

</style>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    { "type":"text","id":"logo_text","label":"Left Text","default":"TISSO VISION" },
    { "type":"text","id":"center_text","label":"Center Text","default":"Find the ideal gift for your loved ones" },
    { "type":"text","id":"cta_text","label":"Right Button Text","default":"CHOOSE GIFT" },
    { "type":"url","id":"cta_link","label":"Right Button Link","default":"/collections/all" },

    { "type":"text","id":"heading","label":"Main Heading","default":"The Gift Guide" },
    { "type":"text","id":"subheading","label":"Subheading","default":"Discover joy with our curated holiday picks." },
    { "type":"text","id":"button_text","label":"Bottom Button Text","default":"SHOP NOW" },
    { "type":"url","id":"button_link","label":"Bottom Button Link","default":"/collections/all" },

    { "type":"image_picker","id":"banner_image","label":"Banner Image" }
  ]
}
{% endschema %}
