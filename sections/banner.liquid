{% stylesheet %}
.tisso-banner {
  position: relative;
  width: 100%;
  min-height: 520px;
  background: url({{ section.settings.bg_image | img_url: '2000x' }}) center center / cover no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: Arial, sans-serif;
}

.tisso-inner {
  text-align: center;
  max-width: 720px;
  padding: 40px 20px;
}

.tisso-tag {
  display: inline-block;
  border: 1px solid #ff4d4d;
  color: #000;
  font-size: 12px;
  letter-spacing: 1px;
  padding: 4px 12px;
  margin-bottom: 12px;
}

.tisso-title {
  font-size: 48px;
  font-weight: 600;
  margin: 8px 0;
}

.tisso-desc {
  font-size: 15px;
  line-height: 1.6;
  margin-bottom: 24px;
}

.tisso-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: #000;
  color: #fff;
  padding: 12px 28px;
  text-decoration: none;
  font-size: 13px;
  letter-spacing: 1px;
  border: 1px solid #000;
  transition: all .3s ease;
  overflow: hidden;
  position: relative;
}

.tisso-btn span {
  position: relative;
  z-index: 2;
}

.tisso-btn::after {
  content: "";
  position: absolute;
  left: -100%;
  top: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transition: .3s;
}

.tisso-btn:hover::after {
  left: 0;
}

.tisso-btn:hover {
  color: #000;
}

.tisso-bottom {
  position: absolute;
  bottom: 14px;
  width: 100%;
  text-align: center;
  font-size: 11px;
  letter-spacing: 1px;
}

/* Mobile */
@media(max-width:768px) {
  .tisso-banner { min-height: 420px; }
  .tisso-title { font-size: 32px; }
  .tisso-desc { font-size: 14px; }
}
{% endstylesheet %}

<div class="tisso-banner">
  <div class="tisso-inner">

    <div class="tisso-tag">
      {{ section.settings.top_label }}
    </div>

    <h1 class="tisso-title">
      {{ section.settings.heading }}
    </h1>

    <p class="tisso-desc">
      {{ section.settings.description }}
    </p>

    <a href="{{ section.settings.button_link }}" class="tisso-btn">
      <span>{{ section.settings.button_text }} â†’</span>
    </a>

  </div>

  <div class="tisso-bottom">
    {{ section.settings.bottom_text }}
  </div>
</div>

{% javascript %}
document.querySelectorAll('.tisso-btn').forEach(btn => {
  btn.addEventListener('mouseenter', () => {
    btn.style.transform = 'translateY(-2px)';
  });

  btn.addEventListener('mouseleave', () => {
    btn.style.transform = 'translateY(0)';
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Tisso Banner",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "text", "id": "top_label", "label": "Top label", "default": "TISSO VISON" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "SHOP NOW" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "text", "id": "bottom_text", "label": "Bottom text", "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR" }
  ],
  "presets": [
    { "name": "Tisso Banner" }
  ]
}
{% endschema %}

